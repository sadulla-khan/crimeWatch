<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="12dp" android:left="12dp" android:right="4dp" android:top="12dp">
        <shape android:shape="rectangle">
            <solid android:color="#80000000" />  <!-- Shadow color -->
            <corners android:radius="12dp" />  <!-- Rounded corners -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CEA5D5" />  <!-- Button color -->
            <corners android:radius="12dp" />
            <stroke android:color="@color/black"
            android:width="1dp"/> <!-- Rounded corners -->
        </shape>
    </item>
</layer-list>